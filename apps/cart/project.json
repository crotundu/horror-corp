{
  "name": "cart",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cart/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/cart",
        "index": "apps/cart/src/index.html",
        "baseHref": "/",
        "main": "apps/cart/src/main.ts",
        "tsConfig": "apps/cart/tsconfig.app.json",
        "assets": ["apps/cart/src/favicon.ico", "apps/cart/src/assets"],
        "styles": ["/global.css", "apps/cart/src/styles.css"],
        "scripts": [],
        "isolatedConfig": true,
        "webpackConfig": "apps/cart/webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/cart/src/environments/environment.ts",
              "with": "apps/cart/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "webpackConfig": "apps/cart/webpack.config.prod.js"
        }
      }
    },
    "serve": {
      "executor": "@nx/react:module-federation-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "cart:build",
        "hmr": true,
        "port": 8082,
        "host": "127.0.0.1"
      },
      "configurations": {
        "development": {
          "buildTarget": "cart:build:development"
        },
        "production": {
          "buildTarget": "cart:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/cart/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "cart:build",
        "port": 8082,
        "host": "127.0.0.1"
      },
      "configurations": {
        "development": {
          "buildTarget": "cart:build:development"
        },
        "production": {
          "buildTarget": "cart:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/cart/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "build-docker": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/cart/Dockerfile . -t horror-corp-cart"
    },
    "run-docker": {
      "dependsOn": ["build-docker"],
      "command": "docker run -p 8082:80 horror-corp-cart"
    },
    "tag-docker-aws": {
      "dependsOn": ["build-docker"],
      "command": "docker tag horror-corp-cart:latest 210042418509.dkr.ecr.eu-central-1.amazonaws.com/horror-corp-cart:latest"
    },
    "push-docker-aws": {
      "dependsOn": ["tag-docker-aws"],
      "command": "docker push 210042418509.dkr.ecr.eu-central-1.amazonaws.com/horror-corp-cart:latest"
    }
  },
  "tags": []
}
